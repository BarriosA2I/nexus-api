# Nexus Assistant Unified - Environment Configuration

# Application
APP_NAME=Nexus Assistant Unified
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1

# CORS (comma-separated origins, or * for all)
CORS_ORIGINS=*

# Paths
# KNOWLEDGE_DIR=../knowledge
# RAGNAROK_V6_PATH=C:\Users\gary\python-commercial-video-agents\ragnarok_v6_legendary
# RAGNAROK_BAR_PATH=C:\Users\gary\python-barrios-agents\ragnarok

# RAG Configuration
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
RAG_SIMILARITY_THRESHOLD=0.15
RAG_MAX_RESULTS=5

# Circuit Breaker
