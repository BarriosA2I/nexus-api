LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1024

# Ragnarok
RAGNAROK_MODE=mock
# RAGNAROK_API_URL=http://localhost:8001
RAGNAROK_TIMEOUT=300

# Job Store
JOB_RETENTION_HOURS=24
JOB_MAX_CONCURRENT=5
